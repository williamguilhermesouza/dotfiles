" Shared base config
source ~/.vim/init.vim

" ideavim action list
" https://gist.github.com/zchee/9c78f91cc5ad771c1f5d
" remaps article
" https://towardsdatascience.com/the-essential-ideavim-remaps-291d4cd3971b/

" enables system clipboard for ideavim
set clipboard+=unnamed
set clipboard+=ideaput

" join using rider
set ideajoin
" keeps current vim mode after executing refactor commands
set idearefactormode=keep

" opens ideavimrc and source it
nnoremap <leader>oc :e ~/.ideavimrc<CR>
nnoremap <leader>sc :action IdeaVim.ReloadVimRc.reload<CR>

" toggle distraction free mode
nnoremap <c-z> :action ToggleDistractionFreeMode<CR>

" terminal shortcuts
nnoremap <leader>t :action ActivateTerminalToolWindow<CR>
nnoremap <c-t> :action Terminal.OpenInTerminal<CR>

" open split windows
nnoremap <leader>v :action SplitVertically<CR>
nnoremap <leader>h :action SplitHorizontally<CR>

" window close
nnoremap <Leader>q :action CloseContent<CR>
nnoremap <Leader>qa :action CloseAllEditors<CR>

" reselects afer indenting
vnoremap < <gv
vnoremap > >gv

" method navigation
nnoremap [[ :action MethodUp<CR>
nnoremap ]] :action MethodDown<CR>

" fold unfold code
"nnoremap zc :action CollapseRegion<CR>
"nnoremap zo :action ExpandRegion<CR>
"nnoremap <leader>zc :action CollapseAllRegions<CR>
"nnoremap <leader>zo :action ExpandAllRegions<CR>

" comment code
nnoremap <c-k>c :action CommentByLineComment<CR>
vnoremap <c-k>c :action CommentByLineComment<CR>

" open refactor menu
nnoremap <leader>r :action Refactorings.QuickListPopupAction<CR>

" format code
nnoremap = :action ReformatCode<CR>

" format imports
nnoremap <leader>oi :action OptimizeImports<CR>

" show recent opened files
" nnoremap <c-r> :action RecentFiles<CR>

" show recent cursor positions
nnoremap <leader>l :action RecentLocations<CR>

" show local history
nnoremap <leader>h  :action LocalHistory.ShowHistory<CR>

" error navigation
nnoremap ge :action GotoNextError<CR>
nnoremap gE :action GotoPreviousError<CR>

" tab navigation
"nnoremap <TAB> :action PreviousTab<CR>
"nnoremap <s-TAB> :action NextTab<CR>

" code search and navigation, review
nnoremap <c-/> :action FindInPath<CR>
nnoremap <c-a> :action GotoAction<CR>
nnoremap <c-f> :action GotoFile<CR>

nnoremap <leader>u :action FindUsages<CR>
nnoremap <leader>s :action GotoRelated<CR>
nnoremap <leader>h :action CallHierarchy<CR>
nnoremap <leader>b :action ShowNavBar<CR>
nnoremap <c-s> :action FileStructurePopup<CR>

nnoremap <c-o> :action GotoSymbol<CR>
nnoremap gc :action GotoClass<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gd :action GotToDeclaration<CR>
nnoremap gp :action GotToSuperMethod<CR>
nnoremap gt :action GotoTest<CR>
nnoremap gb :action Back<CR>
nnoremap gf :action Forward<CR>

" mimicking harpoon through bookmarks
nnoremap <c-e> :action ShowBookmarks<CR>


" ctrl c to esc
map <C-c> <Esc>

" handling shortcuts in vim instead of rider
sethandler <C-c> a:vim " esc remap
sethandler <C-w> a:vim " windows
sethandler <C-t> a:vim " terminal
sethandler <C-r> a:vim " redo
sethandler <C-k> a:vim " comments
sethandler <C-o> a:vim " navigate back

